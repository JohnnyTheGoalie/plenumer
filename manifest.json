{
  "manifest_version": 3,
  "name": "Timer Overlay",
  "version": "1.0",
  "description": "Simple keyboard-controlled timer overlay.",
  "permissions": ["storage", "tabs"],
  "background": { "service_worker": "background.js" },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["overlay.css"]
    }
  ]
}
